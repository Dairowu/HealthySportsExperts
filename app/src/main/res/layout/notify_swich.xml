<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    >

    <include layout="@layout/topbar"
        android:id="@+id/topBar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/my_tv_message_large"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:background="#ffffff"
        android:text="接收新消息通知"
        android:layout_below="@id/topBar"
        android:layout_marginTop="35dp"
        android:id="@+id/tv_accept" />

    <ToggleButton
        android:id="@+id/toggle_btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/my_toggle_button"
        android:layout_alignTop="@+id/tv_accept"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv_accept"
        android:checked="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/my_tv_message_large"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:background="#ffffff"
        android:text="声音"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_accept"
        android:id="@+id/tv_voice" />

    <ToggleButton
        android:id="@+id/toggle_btn_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/my_toggle_button"
        android:layout_alignTop="@+id/tv_voice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv_voice"
        android:checked="true" />

    <View
        android:id="@+id/view_devider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tv_voice"
        android:background="@drawable/base_horization_line"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/my_tv_message_large"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:background="#ffffff"
        android:text="震动"
        android:layout_below="@id/view_devider"
        android:id="@+id/tv_vibrate" />

    <ToggleButton
        android:id="@+id/toggle_btn_vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/my_toggle_button"
        android:layout_alignTop="@+id/tv_vibrate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv_vibrate"
        android:checked="true" />

</RelativeLayout>
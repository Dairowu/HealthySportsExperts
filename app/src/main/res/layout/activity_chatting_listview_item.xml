<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3e5fc">
    <TextView
        android:id="@+id/txt_content_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/base_color_text_white"
        android:padding="8dp"
        android:text="22:30"/>

    <ImageView
        android:id="@+id/imageView_target_receive"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/activity_add_user_head"
        android:layout_below="@id/txt_content_time"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/txt_target_receive_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/imageView_target_receive"
        android:text="aa" />
    
    <cn.xietong.healthysportsexperts.ui.view.BmobTextView
        android:id="@+id/txt_textcontent_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:layout_toRightOf="@id/imageView_target_receive"
        android:layout_below="@id/txt_content_time"
        android:textSize="16sp">
    </cn.xietong.healthysportsexperts.ui.view.BmobTextView>
    
    <ImageView
        android:id="@+id/imageView_current_sending"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:layout_below="@id/txt_content_time"
        android:layout_marginRight="8dp"
        android:background="@drawable/activity_add_user_head"/>

    <TextView
        android:id="@+id/txt_current_sending_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView_current_sending"
        android:layout_marginRight="16dp"
        android:text="bb"/>
    <cn.xietong.healthysportsexperts.ui.view.BmobTextView
        android:id="@+id/txt_textcontent_sending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue"
        android:layout_toLeftOf="@id/imageView_current_sending"
        android:layout_below="@id/txt_content_time"
        android:textSize="16sp">
    </cn.xietong.healthysportsexperts.ui.view.BmobTextView>
    
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ring_color">
    <View 
        android:id="@+id/view_lineOne"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout 
        android:id="@+id/layout_search_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">
     <View 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"/>
     <EditText 
        android:id="@+id/edit_search_friends"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:layout_below="@id/view_lineOne"
        android:paddingLeft="5dp"
        android:drawableLeft="@drawable/activity_add_search_friend_head"
        android:drawablePadding="5dp"
         android:layout_marginTop="2dp"
        android:background="@drawable/search_friend_shape"
        android:hint="搜索好友">
    </EditText>
    <View 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"/>
    <Button 
        android:id="@+id/btn_search_friends"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:background="@drawable/btn_login_selector"
        android:text="搜索"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="@color/base_color_text_white"/>
    <View 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"/>       
    </LinearLayout>
     
      
    <View 
        android:id="@+id/view_lineTwo"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/layout_search_friends"/>
    
    <ListView 
        android:id="@+id/listView_send_friend_request"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_lineTwo"
        android:background="@color/base_color_text_white">
    </ListView>
    

</RelativeLayout>

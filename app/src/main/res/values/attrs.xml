<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TopBar">

        <attr name="topTitle" format="string"/>
        <attr name="topTitleTextSize" format="dimension"/>
        <attr name="topTitleTextColor" format="color"/>
        <attr name="topLeftTextColor" format="color"/>
        <attr name="topLeftBackground" format="reference|color"/>
        <attr name="topLeftText" format="string"/>
        <attr name="topRightTextColor" format="color"/>
        <attr name="topRightBackground" format="reference|color"/>
        <attr name="topRightText" format="string"/>

    </declare-styleable>
    
    <declare-styleable name="CircleProgressBarCutout">
        <attr name="radius" format="dimension"/>
        <attr name="pathWidth" format="dimension" />
        <attr name="max" format="float"/>
        <attr name="progress" format="float"/>
        <attr name="outerPathColor" format="color"/>
        <attr name="outerPaddingColor" format="color"/>
        <attr name="contentCircleColor" format="color"/>
        <attr name="borderColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ScaleRulerView">
        <attr name="normalLineColor" format="color"/>
        <attr name="selectLineColor" format="color"/>
        <attr name="currentValue" format="float"/>
        <attr name="maxValue" format="float"/>
        <attr name="minValue" format="float"/>
        <attr name="normalLineWidth" format="dimension"/>
        <attr name="selectLineWidth" format="dimension"/>
    </declare-styleable>

</resources>